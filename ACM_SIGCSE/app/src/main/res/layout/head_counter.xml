<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.17"></FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.14" >

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/numParticipant"
            android:layout_gravity="center"
            android:text="Number of Participants"
            android:theme="@style/Animation.AppCompat.DropDownUp"
            android:textSize="@dimen/abc_text_size_large_material"
            android:textStyle="italic" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left|bottom"></FrameLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.10"></FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Maximum "
        android:id="@+id/maximum"
        android:theme="@style/AlertDialog.AppCompat"
        android:textSize="@dimen/abc_action_bar_progress_bar_size" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.07">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_gravity="left|bottom"></FrameLayout>
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remaining"
        android:id="@+id/rem"
        android:textSize="@dimen/abc_action_bar_progress_bar_size"
        android:theme="@style/AlertDialog.AppCompat" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.22"></FrameLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:id="@+id/button2"
        android:layout_gravity="center_horizontal"
        android:background="#4c41ff"
        android:textColor="#ffffff" />

</LinearLayout>